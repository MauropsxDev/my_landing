---
// src/components/ServicioCard.astro
const { titulo, descripcion } = Astro.props;
---
<div class="bg-white p-6 rounded-lg shadow border-l-4 border-blue-600 hover:shadow-lg transition transform hover:-translate-y-1">
  <h3 class="text-xl font-bold text-gray-800 mb-2">{titulo}</h3>
  <p class="text-gray-600">{descripcion}</p>
</div>
<div class="card">
  <h3 class="titulo">{titulo}</h3>
  <p class="descripcion">{descripcion}</p>
</div>